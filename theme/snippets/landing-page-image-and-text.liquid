<!-- landing page image and text -->

<style>
  .landing_page_img_and_text{
    background: {{ section.settings.image_and_text_bg_color }};
  }
  
</style>

<div class="landing_page_img_and_text">
  <div class="container">
    <div class="flex_view middle">
      <div class="1/2--tablet-and-up 1/2--desk">
        <div class="text_wrapper">
          {%- unless section.settings.image_and_text_section_heading == blank -%}
          <h3 class="dacing-font">{{ section.settings.image_and_text_section_heading }}</h3>
          {%- endunless -%}

          {%- unless section.settings.image_and_text_section_content == blank-%}
          <div class="image_and_text_section_content">
            <p>{{ section.settings.image_and_text_section_content }}</p>
          </div>
          {%- endunless -%}

          {%- unless section.settings.image_and_text_section_button_text == blank -%}
          <div class="button">
            <a href="{{ settings.image_and_text_section_button_url }}" title="{{ section.settings.image_and_text_section_button_text }}" tabindex="0">
              {{ section.settings.image_and_text_section_button_text }}
            </a>
          </div>
          {%- endunless  -%}
        </div>
      </div>
      <div class="1/2--tablet-and-up 1/2--desk">
        {%- unless section.settings.image_and_text_section_button_image == blank -%}
        <div class="img_wrapper">
          <img src="{{ section.settings.image_and_text_section_button_image | img_url: '90x' }}" srcset="{{ section.settings.image_and_text_section_button_image | img_url: 'grande' }} 1x, {{ section.settings.image_and_text_section_button_image | img_url: 'grande', scale: 2 }} 2x" alt="{{ section.settings.image_and_text_section_button_image.alt | escape }}">
        </div>
        {%- endunless -%}
      </div>
    </div>
  </div>
</div>
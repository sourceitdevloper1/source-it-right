.field__input:focus,
.field__input-wrapper--flag-focus .field__input {
  outline: none;
  border-color: #a287be;
  -webkit-box-shadow: 0 0 0 1px #a287be;
  box-shadow: 0 0 0 1px #a287be;
}

.btn,
.sp-modal-toggle{
  background-color: #a287be;
  color: #fff;
  &:hover {
    background-color: rgba(162, 135, 190, 0.7);
    color: white;
  }
}

.input-checkbox:focus,
.input-radio:focus {
  border: 2px solid #a287be;
  outline: none;
}

.input-checkbox:checked,
.input-radio:checked {
  border: none;
  -webkit-box-shadow: 0 0 0 10px #a287be inset;
  box-shadow: 0 0 0 10px #a287be inset;
}

a,
.link{
  color: #a287be;
  &:hover{
    color: #a287be;
    text-decoration: underline;
  }
}

.main .icon-svg--color-adaptive-light {

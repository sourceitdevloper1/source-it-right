.gst-data{
  .custom--filled{
    .information-icon-wrap{
      position: relative;
      .input-wrap {
        width: 90%;
        .field__label {
          opacity: 1;
        }
      }
      .info-icon{
        position: absolute;
        right:10px;
        @include transform(translateY(-50%));
        top:50%;
        background: #a287be;
        padding: 10px;
        border-radius: 50%;
        width: 5px;
        height: 5px;
        text-align: center;
        line-height: 5px;
        color: #fff;
        font-size: 14px;
        font-weight: bold;
        cursor: poiner;
        @media(max-width: 1024px){
          right: 0;
        }
      }
      .info-text{
        display: none;
        position: absolute;
        width: 85%;
        text-align: center;
        @include transform(translateY(-50%));
        top: 50%;
        font-size: 12px;
        right: 45px;
        line-height: 25px;
        background: #a287be;
        z-index: 99;
        color: #fff;
        @include transition(all 1s);
        &.active{
          display: block;
        }
        &:after{
          @include transform(translateY(-50%) rotate(25deg));
          content: 'â–¼';
          position: absolute;
          right: -7px;
          color: #a287be;
          top: 50%;
        }
      }
    } 
  }
}
